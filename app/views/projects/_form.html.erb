<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :startdate %><br>
    <%= f.date_select :startdate,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :enddate %><br>
    <%= f.date_select :enddate ,class:"form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :status %><br>
    <%= f.text_field :status,class:"form-control" %>
  </div>
  <div class="checkbox">
    <strong> Channels </strong>
  <ul style="list-style-type:none;">
     <% @channels.each  do |channel| %>
        <li> <%= check_box_tag  "channel_id[]",channel.id,(checked = true if @selectedchannels.collect{|c| c.id}.include?(channel.id)) %> <%= channel.name %> </li>
    <%end%>
  </ul>
</div>
  <div class="form-group">
    <%= f.submit  "Save and Next",class:"btn btn-primary"%>
  </div>
<% end %>
